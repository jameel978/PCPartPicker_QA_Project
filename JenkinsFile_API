pipeline {
    agent any

    stages {
        stage('Run API Tests') {
            steps {
                script {    
                    echo "${Windows_path}"           
                    // Install dependencies
                    bat '${env.Windows_path}\\pip.exe install -r requirements.txt'
                    
                    // Execute Python script
                    bat '${env.Windows_path}\\python.exe API_Test_runner.py'
                }
            }
        }
    }
}
