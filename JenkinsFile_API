pipeline {
    agent any

    stages {
        stage('Run API Tests') {
            steps {
                script {
                    // Checkout code
                    checkout scm
                    
                    // Install dependencies
                    bat 'pip.exe install -r requirements.txt'
                    
                    // Execute Python script
                    bat 'python.exe API_Test_runner.py'
                }
            }
        }
    }
}
