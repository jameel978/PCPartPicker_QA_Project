pipeline {
    agent any

    environment {
        PIP_PATH = 'C:\\Program Files\\Python32\\Scripts\\pip.exe'
        PYTHON_PATH = 'C:\\Program Files\\Python312\\python.exe'
    }

    stages {
        stage('Setup Virual Python Environment') {
            steps {
                echo 'Setting up Python environment...'
                bat "C:\\Program Files\\Python312\\python.exe -m venv venv"
                bat 'venv\\Scripts\\python.exe -m pip install --upgrade pip'
                bat 'venv\\Scripts\\pip.exe install -r requirements.txt'
            }
        }

        stage('Installing requirements') {
            steps {
                echo 'Installing requirements..'
                bat 'venv\\Scripts\\pip.exe install -r requirements.txt'
            }
        }

        stage('Runing API Tests') {
            steps {
                echo 'Testing..'
                bat "venv\\Scripts\\python.exe API_Test_runner.py"
            }
        }


        stage('Runing Selenium Tests') {
            steps {
                echo 'Testing..'
                bat "venv\\Scripts\\python.exe Selenium_test_runner.py"
            }
        }

    }

    post {
        always {
            echo 'Cleaning up...'
            bat "rd /s /q venv"
        }
    }
}