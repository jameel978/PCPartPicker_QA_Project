pipeline {
    agent any

    stages {
        stage('Run API Tests') {
            steps {
                script {    
                    echo "${Windows_path}"           
                    // Install dependencies

                    bat 'python --version'
                    
                    bat "${Windows_path}\\pip.exe install -r requirements.txt"
                    
                    // Execute Python script
                    bat "${Windows_path}\\python.exe API_Test_runner.py"
                }
            }
        }
    }
}
