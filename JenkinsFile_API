pipeline {
    agent any
    
    triggers {
        githubPush(branchFilter: 'main')  // Trigger on push to main branch
    }
    
    stages {
        stage('Run Python script') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: '']]])
                
                // Set up Python
                sh 'pyenv global 3.10.0'  // Assuming pyenv is set up to manage Python versions
                
                // Install dependencies
                sh 'pip install -r requirements.txt'
                
                // Execute Python script
                sh 'python API_Test_runner.py'
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}
