            steps {
                echo 'Setting up Python environment...'
                bat "\"${PYTHON_PATH}\" -m venv venv"
                bat 'venv\\Scripts\\python.exe -m pip install --upgrade pip'
                bat 'venv\\Scripts\\pip.exe install -r req
